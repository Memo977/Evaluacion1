@model Evaluacion1.Models.Matricula
@{
    ViewData["Title"] = "Eliminar Matrícula";
}

<h1>Eliminar Matrícula</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">¿Está seguro que desea eliminar esta matrícula?</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Nota:</strong> Al eliminar la matrícula, el estado del estudiante cambiará a "No Matriculado".
                </div>
                <dl>
                    <dt>@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd>@Html.DisplayFor(model => model.Id)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Fecha)</dt>
                    <dd>@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                    <dt>Estudiante</dt>
                    <dd>@Model.Estudiante.NombreCompleto</dd>

                    <dt>Cédula del Estudiante</dt>
                    <dd>@Model.Estudiante.Cedula</dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>