@{
    ViewData["Title"] = "Registrar Matrícula";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Registrar Nueva Matrícula</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Volver al Listado
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="fas fa-graduation-cap mr-2 fa-lg"></i>
                <h5 class="mb-0">Datos de la Matrícula</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" id="matriculaForm">
                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-user-graduate mr-1"></i> Estudiante
                        </label>
                        <select name="estudianteId" class="form-control" asp-items="ViewBag.Estudiantes"></select>
                        <small class="form-text text-muted">Seleccione el estudiante que desea matricular</small>
                    </div>

                    <hr class="my-4" />

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success btn-lg px-5">
                            <i class="fas fa-check-circle mr-2"></i>Matricular Estudiante
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                            <i class="fas fa-times mr-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Agregar efecto de carga al enviar el formulario
            $('#matriculaForm').on('submit', function() {
                $('button[type="submit"]').html('<i class="fas fa-spinner fa-spin mr-2"></i>Procesando...');
                $('button[type="submit"]').attr('disabled', 'disabled');
            });

            // Highlight active navigation
            $('.nav-item a[href$="Matriculas"]').addClass('active');
        });
    </script>
}