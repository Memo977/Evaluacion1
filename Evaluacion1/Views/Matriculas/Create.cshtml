@{
    ViewData["Title"] = "Registrar Matrícula";
}

<h1>Registrar Nueva Matrícula</h1>

<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Datos de la Matrícula</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="form-group">
                        <label class="control-label">Estudiante</label>
                        <select name="estudianteId" class="form-control" asp-items="ViewBag.Estudiantes"></select>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Matricular Estudiante" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>