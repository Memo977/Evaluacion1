@model IEnumerable<Evaluacion1.Models.Matricula>
@{
    ViewData["Title"] = "Matrículas";
}

<h1>Listado de Matrículas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nueva Matrícula</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>Estudiante</th>
            <th>Cédula</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@item.Estudiante.NombreCompleto</td>
                <td>@item.Estudiante.Cedula</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                            <i class="fas fa-trash-alt"></i> Eliminar
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>