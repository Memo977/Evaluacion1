@model Evaluacion1.Models.Matricula
@{
    ViewData["Title"] = "Detalles de Matrícula";
}

<h1>Detalles de la Matrícula</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Información de la Matrícula</h5>
            </div>
            <div class="card-body">
                <dl>
                    <dt>@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd>@Html.DisplayFor(model => model.Id)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Fecha)</dt>
                    <dd>@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                    <dt>Estudiante</dt>
                    <dd>@Model.Estudiante.NombreCompleto</dd>

                    <dt>Cédula del Estudiante</dt>
                    <dd>@Model.Estudiante.Cedula</dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </div>
    </div>
</div>