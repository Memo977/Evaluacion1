@model Evaluacion1.Models.Matricula
@{
    ViewData["Title"] = "Detalles de Matrícula";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Detalles de la Matrícula</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Volver al Listado
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-info text-white d-flex align-items-center">
                <i class="fas fa-info-circle mr-2 fa-lg"></i>
                <h5 class="mb-0">Información de la Matrícula</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        <!-- Matrícula icon -->
                        <i class="fas fa-clipboard-check text-info fa-5x mb-3"></i>
                        <h4>Matrícula #@Model.Id</h4>
                        <div class="mt-2">
                            <span class="badge badge-success px-3 py-2">
                                <i class="fas fa-calendar-check mr-1"></i> Activa
                            </span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th style="width: 35%">
                                            <i class="fas fa-hashtag mr-1"></i> @Html.DisplayNameFor(model => model.Id)
                                        </th>
                                        <td>@Html.DisplayFor(model => model.Id)</td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <i class="fas fa-calendar-alt mr-1"></i> @Html.DisplayNameFor(model => model.Fecha)
                                        </th>
                                        <td>@Model.Fecha.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <i class="fas fa-user-graduate mr-1"></i> Estudiante
                                        </th>
                                        <td>@Model.Estudiante.NombreCompleto</td>
                                    </tr>
                                    <tr>
                                        <th>
                                            <i class="fas fa-id-card mr-1"></i> Cédula
                                        </th>
                                        <td>@Model.Estudiante.Cedula</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <div class="btn-group" role="group">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt mr-2"></i>Eliminar Matrícula
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list mr-2"></i>Volver al Listado
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Highlight active navigation
        $(document).ready(function() {
            $('.nav-item a[href$="Matriculas"]').addClass('active');
        });
    </script>
}