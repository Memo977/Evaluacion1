@model Evaluacion1.Models.Estudiante
@{
    ViewData["Title"] = "Detalles del Estudiante";
}

<h1>Detalles del Estudiante</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Información del Estudiante</h5>
            </div>
            <div class="card-body">
                <dl>
                    <dt>@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd>@Html.DisplayFor(model => model.Id)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Cedula)</dt>
                    <dd>@Html.DisplayFor(model => model.Cedula)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Apellido1)</dt>
                    <dd>@Html.DisplayFor(model => model.Apellido1)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Apellido2)</dt>
                    <dd>@Html.DisplayFor(model => model.Apellido2)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Sexo)</dt>
                    <dd>@Html.DisplayFor(model => model.Sexo)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd>
                        <span class="badge @(Model.Estado == Evaluacion1.Models.Enum.EstadoEstudiante.Matriculado ? "bg-success" : "bg-secondary") text-dark">
                            @Html.DisplayFor(model => model.Estado)
                        </span>
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </div>
    </div>
</div>
