@model Evaluacion1.Models.Estudiante
@{
    ViewData["Title"] = "Registrar Estudiante";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Registrar Nuevo Estudiante</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Volver al Listado
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="fas fa-user-plus mr-2 fa-lg"></i>
                <h5 class="mb-0">Datos del Estudiante</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Cedula" class="control-label">
                                <i class="fas fa-id-card mr-1"></i> @Html.DisplayNameFor(model => model.Cedula)
                            </label>
                            <input asp-for="Cedula" class="form-control" placeholder="Ingrese el número de cédula" />
                            <span asp-validation-for="Cedula" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Nombre" class="control-label">
                                <i class="fas fa-user mr-1"></i> @Html.DisplayNameFor(model => model.Nombre)
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Apellido1" class="control-label">
                                <i class="fas fa-user-tag mr-1"></i> @Html.DisplayNameFor(model => model.Apellido1)
                            </label>
                            <input asp-for="Apellido1" class="form-control" placeholder="Ingrese el primer apellido" />
                            <span asp-validation-for="Apellido1" class="text-danger small"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Apellido2" class="control-label">
                                <i class="fas fa-user-tag mr-1"></i> @Html.DisplayNameFor(model => model.Apellido2)
                            </label>
                            <input asp-for="Apellido2" class="form-control" placeholder="Ingrese el segundo apellido" />
                            <span asp-validation-for="Apellido2" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Sexo" class="control-label">
                                <i class="fas fa-venus-mars mr-1"></i> @Html.DisplayNameFor(model => model.Sexo)
                            </label>
                            <select asp-for="Sexo" class="form-control" asp-items="Html.GetEnumSelectList<Evaluacion1.Models.Enum.Sexo>()"></select>
                            <span asp-validation-for="Sexo" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-save mr-2"></i>Registrar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                            <i class="fas fa-times mr-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Add custom validation styling
        $(document).ready(function() {
            $('form').on('submit', function() {
                if ($(this).valid()) {
                    // Show loading state on button
                    $('button[type="submit"]').html('<i class="fas fa-spinner fa-spin mr-2"></i>Procesando...');
                    $('button[type="submit"]').attr('disabled', 'disabled');
                }
            });

            // Auto-focus first input field
            $('form input:first').focus();
        });
    </script>
}