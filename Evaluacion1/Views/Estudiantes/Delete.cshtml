@model Evaluacion1.Models.Estudiante
@{
    ViewData["Title"] = "Eliminar Estudiante";
    bool canDelete = ViewBag.CanDelete ?? false;
}

<h1>Eliminar Estudiante</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">¿Está seguro que desea eliminar este estudiante?</h5>
            </div>
            <div class="card-body">
                <dl>
                    <dt>@Html.DisplayNameFor(model => model.Cedula)</dt>
                    <dd>@Html.DisplayFor(model => model.Cedula)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Apellido1)</dt>
                    <dd>@Html.DisplayFor(model => model.Apellido1)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Apellido2)</dt>
                    <dd>@Html.DisplayFor(model => model.Apellido2)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Sexo)</dt>
                    <dd>@Html.DisplayFor(model => model.Sexo)</dd>

                    <dt>@Html.DisplayNameFor(model => model.Estado)</dt>
                    <dd>
                        <span class="badge @(Model.Estado == Evaluacion1.Models.Enum.EstadoEstudiante.Matriculado ? "badge-success" : "badge-secondary")">
                            @Html.DisplayFor(model => model.Estado)
                        </span>
                    </dd>
                </dl>

                @if (!canDelete)
                {
                    <div class="alert alert-warning">
                        <strong>Advertencia:</strong> No es posible eliminar este estudiante porque se encuentra matriculado.
                    </div>
                }
            </div>
            <div class="card-footer text-center">
                @if (canDelete)
                {
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </form>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
                }
            </div>
        </div>
    </div>
</div>